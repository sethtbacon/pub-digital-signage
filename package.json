{
  "name": "pub-digital-signage",
  "version": "1.0.0",
  "description": "A digital signage solution for home pub displays running on Raspberry Pi 4 connected directly to a monitor via HDMI.",
  "private": true,
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd src/frontend && npm install",
    "install:backend": "cd src/backend && npm install",
    "start": "cd src/backend && npm start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:ts": "concurrently \"npm run dev:frontend\" \"npm run dev:backend:ts\"",
    "dev:backend:ts": "cd src/backend && npm run dev:ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "setup": "npm run install:all && npm run db:init && npm run build",
    "setup:dev": "npm run install:all && npm run db:init",
    "db:init": "cd scripts/setup && node init-db.js",
    "db:seed": "cd scripts/setup && node seed-data.js",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd src/frontend && npm run type-check",
    "type-check:backend": "cd src/backend && tsc --noEmit",
    "type-check:watch": "concurrently \"npm run type-check:frontend:watch\" \"npm run type-check:backend:watch\"",
    "type-check:frontend:watch": "cd src/frontend && npm run type-check:watch",
    "type-check:backend:watch": "cd src/backend && tsc --noEmit --watch",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && npm test",
    "test:watch": "concurrently \"npm run test:frontend:watch\" \"npm run test:backend:watch\"",
    "test:frontend:watch": "cd src/frontend && npm run test:watch",
    "test:backend:watch": "cd src/backend && npm run test:watch",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:frontend:coverage": "cd src/frontend && npm run test:coverage",
    "test:backend:coverage": "cd src/backend && npm run test:coverage",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:backend": "cd src/backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd src/frontend && npm run lint:fix",
    "lint:fix:backend": "cd src/backend && npm run lint:fix",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd src/frontend && npm run format",
    "format:backend": "cd src/backend && npm run format"
  },
  "keywords": [
    "digital signage",
    "raspberry pi",
    "vue",
    "express",
    "pub display"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.0",
    "concurrently": "^8.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "config": "^3.3.12"
  }
}
